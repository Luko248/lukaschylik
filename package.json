{
  "name": "my-portfolio-website",
  "description": "",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "trustedDependencies": [
    "sharp"
  ],
  "trustedDependencies-annotation": "Needed for bun to allow running install scripts",
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "build:css": "sass src/styles/scss/index.scss src/styles/css/index.css",
    "deploy": "echo 'Run \"bun run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "format": "biome format --write .",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "biome:ci": "biome ci .",
    "biome:check:scss": "biome check src/styles/scss/**/*.scss",
    "biome:format:scss": "biome format --write src/styles/scss/**/*.scss",
    "preview": "vite build --ssr src/entry.preview.tsx && vite preview --open",
    "start": "bun run format && concurrently \"vite --open --mode ssr\" \"bun run watch:css\"",
    "watch:css": "nodemon",
    "qwik": "qwik"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@builder.io/qwik": "^1.13.0",
    "@builder.io/qwik-city": "^1.13.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-plugin-qwik": "^1.12.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "sass": "^1.86.3",
    "tailwindcss": "^4.1.3",
    "tailwindcss-signals": "^0.0.25",
    "typescript": "^5.8.3",
    "undici": "^7.3.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@toolwind/anchors": "^1.0.10",
    "gray-matter": "^4.0.3",
    "tailwind-variants": "^1.0.0"
  }
}