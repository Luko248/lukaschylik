{
  "name": "lukas-chylik-portfolio-website",
  "version": "2.0.0",
  "description": "Modern personal portfolio website built with Qwik featuring SSR, dynamic blog posts, and optimized performance. Showcases skills, services, references, and includes a fully functional blog with markdown support.",
  "author": {
    "name": "Lukas Chylik",
    "url": "https://lukaschylik.sk"
  },
  "license": "MIT",
  "keywords": [
    "portfolio",
    "qwik",
    "ssr",
    "blog",
    "typescript",
    "tailwindcss",
    "personal-website",
    "frontend-developer"
  ],
  "homepage": "https://lukaschylik.sk",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukaschylik/lukaschylik.sk.git"
  },
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || ^22.0.0 || >=24.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "trustedDependencies": [
    "sharp"
  ],
  "trustedDependencies-annotation": "Needed for bun to allow running install scripts",
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "build:css": "sass src/styles/scss/index.scss src/styles/css/index.css",
    "dev": "vite --mode ssr",
    "format": "biome format --write .",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
    "preview": "vite build --ssr src/entry.preview.tsx && vite preview --open",
    "start": "bun run fix && concurrently \"vite --open --mode ssr\" \"bun run watch:css\"",
    "watch:css": "nodemon",
    "fix": "bun run stylelint:fix && bun run format"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@builder.io/qwik": "^1.14.1",
    "@builder.io/qwik-city": "^1.14.1",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^24.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.2.3",
    "postcss-scss": "^4.0.9",
    "sass": "^1.89.2",
    "stylelint": "^16.21.0",
    "stylelint-order": "^7.0.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@toolwind/anchors": "^1.0.10",
    "gray-matter": "^4.0.3",
    "tailwind-variants": "^1.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not android < 5",
    "not ios < 12"
  ]
}
